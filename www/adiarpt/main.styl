@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

.pnd-ofelimo
	padding 0px
	overflow-x hidden

#kritiria
	padding 8px
	border-style double none
	border-width 5px
	border-color grey
	

.kritirio
	display inline-block

.kritirioLabel
	display inline-block
	text-align right
	padding-right 0.1em
	padding-left 0.5em
	font-style italic
	&:after
		content ':'
		font-style normal

.kritirioValue
	display inline-block
	text-align left
	font-weight bold

#epikefalida
	> div
		display inline-block
		vertical-align top
		padding 0.2em

#epikefalidaLeft
	width: 26em
	text-align left

#epikefalidaRight
	padding-top 1em !important
	text-align center

#epikefalidaOrganismos
	text-decoration underline

#epikefalidaApo
	display inline-block
	font-weight bold

#epikefalidaApo:before
	content 'από '
	font-weight normal

#epikefalidaEos
	display inline-block
	font-weight bold

#epikefalidaEos:before
	content ' έως '
	font-weight normal
