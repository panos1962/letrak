@charset "utf-8";
@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

.pnd-ofelimo
	padding 0px

#kritiria
	padding 8px
	border-style double none
	border-width 5px
	border-color grey
	

.kritirio
	display inline-block

.kritirioLabel
	display inline-block
	text-align right
	padding-right 0.1em
	padding-left 0.5em
	font-style italic
	&:after
		content ':'
		font-style normal

.kritirioValue
	display inline-block
	text-align left
	font-weight bold

#epikefalida
	> div
		display inline-block
		vertical-align top
		padding 0.2em

#epikefalidaLeft
	width: 26em
	text-align left

#epikefalidaRight
	padding-top 1em !important
	text-align center

#epikefalidaOrganismos
	text-decoration underline

#epikefalidaTitlos
	border-style none none solid none
	border-width 2px
	border-color black
	margin-bottom 4px

#epikefalidaApo
	display inline-block
	font-weight bold

#epikefalidaApo:before
	content 'από '
	font-weight normal

#epikefalidaEos
	display inline-block
	font-weight bold

#epikefalidaEos:before
	content ' έως '
	font-weight normal

#plegma table
	border-collapse collapse
	thead
		border-style solid solid double solid

#plegma table th,td
	padding 4px
	text-align center
	max-width 14em
	overflow hidden
	text-overflow ellipsis

#plegma th
	min-width 1.8em

.plegmaIpalilos
	white-space nowrap
	text-align right
	font-size 80%

.plegmaProselefsi
	position absolute
	bottom 0
	left 0
	font-size 1em

.plegmaApoxorisi
	position absolute
	top 0
	right 0
	font-size 1em
