@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

$emfanesOrio = #806312
$checkSize = 32px
$ordinalWidth = 2.2em

.pnd-ofelimo
	padding 0px
	overflow-x hidden

.prosopaPliktroUpdate
	display none

.deltioArea
	background-color #ffe290
	border-style double none none none
	border-width 3px 0px 0px 0px
	border-color grey
	vendor('user-select', none)

.deltio
	position relative
	padding 4px
	font-weight bold
	color #252525
	> div
		display inline-block
		margin-right 8px

.deltioKatastasi
	position absolute
	left 8px
	top -6px
	font-size $checkSize
	font-weight normal

.deltioKodikos
	margin-left 40px

.deltioKodikos::after
	content '.'
	margin-right 2px

.deltioIpiresia
	padding-left 4px
	padding-right 4px
	color grey
	background-color beige
	border-style solid
	border-width 1px
	border-radius 4px

.deltioIpiresiaUpdate
	color #263288
	background-color #f2ffd4

.deltioProsapo
	padding-left 4px
	padding-right 4px
	font-weight bold
	border-style solid
	border-width 1px
	border-radius 4px

.deltioProsapoProselefsi
	background-color yellow !important
	color midnightblue !important

.deltioProsapoApoxorisi
	background-color midnightblue !important
	color yellow !important

.browser
	border-style double none none none
	border-width 3px 0px 0px 0px
	border-color grey

.browserEmfanesOrio
	border-color $emfanesOrio

.parousia
	padding 0px
	white-space nowrap
	font-family $fontSteno
	color #232323
	border-style none none solid none
	border-width 0px 0px 2px 0px
	border-color grey
	vendor('user-select', none)
	cursor pointer
	> div
		display inline-block
		padding 2px 4px

		border-style none solid none none
		border-width 0px 1px 0px 0px
		border-color grey
		&::before
			content '\200B'

.parousiaTarget
	background-color #ffeb00

.parousiaOrdinal
	width $ordinalWidth
	text-align right
	color saddlebrown

.parousiaIpalilos
	width 3.5em
	text-align right

.parousiaOnomateponimo
	width 16em
	vertical-align bottom
	overflow-x hidden
	text-overflow ellipsis

.parousiaKarta
	width 3.5em
	text-align right

.parousiaOrario
	width 5em

.parousiaMeraora
	width 7em

.parousiaMeraoraProvlima
	background-color #ff9191

.parousiaExcuse
	width 10em
	text-align right
	text-shadow 1px 0 0 #888888

.parousiaInfo
	border-style none !important

.ipografiTabHide
	color red

.ipografesAreaHidden
	display none

.ipografesPanel
	padding 0px 0px 4px 0px

.ipografiPliktroNoCandi
	display none

.ipografes
	overflow hidden

.ipografi
	position relative
	padding 0px
	white-space nowrap
	font-family $fontSteno
	color #3e2800
	background-color #dedc98
	border-style solid none none none
	border-width 1px 0px 0px 0px
	border-color $emfanesOrio
	vendor('user-select', none)
	cursor pointer
	> div
		display inline-block
		padding 2px 4px

		border-style none solid none none
		border-width 0px 1px 0px 0px
		border-color $emfanesOrio
		&::before
			content '\200B'

.ipografiCandi
	color #000000
	text-shadow 0.5px 0px 0px #000000
	background-color #adddf9

.ipografiTaxinomisi
	width $ordinalWidth
	text-align right
	color #14440c

.ipografiArmodios
	width 3.5em
	text-align right

.ipografiOnomateponimo
	width 16em
	vertical-align bottom
	overflow-x hidden
	text-overflow ellipsis

.ipografiTitlos
	vertical-align bottom
	overflow-x hidden
	border-style none !important

.ipografiCheckok
	position absolute
	top -8px
	left 4px
	font-size $checkSize
	color green
	border-style none !important

#ipografiForma
	label
		width 4em

#ipografiFormaTaxinomisi
	width 2em

#ipografiFormaArmodios
	width 4em

#ipografiFormaTitlos
	width 40em

.peFormaInputLine
	padding 2px

#parousiaEditor
	position relative
	display none
	padding 2px
	background-color #fff7df
	& input
	& textarea
		resize none
		background-color #ffffff
	& input:disabled
	& textarea:disabled
		color black
		background-color #ffffe6
		cursor not-allowed
	> .peFormaEnotita
		margin 6px 0px
		border-style none none solid solid
		border-width 1px;
		border-color #d8d8d8
		> .peFormaInputLine
			> label:first-of-type
				vertical-align top
				width 120px

#peDeltioKodikos
	width $deltioKodikosWidth

#peDeltioPerigrafi
	width 461px

#peDeltioImerominia
	width 18em

#peDeltioProsapo
	display inline-block
	padding 2px 4px
	font-weight normal
	text-shadow 1px 0px 0px

#peDeltioIpiresia
#peDeltioDief
	overflow hidden
	text-overflow ellipsis

#peIpalilosKodikos
	width $ipalilosKodikosWidth

#peIpalilosOnomateponimo
	width 463px
	text-shadow 1px 0 0
	color #0e3450 !important
	background-color #ffeba3 !important

#peIpalilosOrario
	width $orarioWidth

#peIpalilosKarta
	width 4em

#peKartaMeraora
	width 184px

#peMeraora
	width 10em

#peAdidos
	width $adidosWidth

.peAdidosOmadaKanoniki
	background-color ivory
	background-color lemonchiffon
	color black

.peAdidosOmadaIgia
	background-color #ffe7b0
	color #a00000

.peAdidosOmadaGoniki
	background-color #cef1f5
	color #003b5f

.peAdidosOmadaRepo
	background-color #b6e8ba
	color #034f92

.peAdidosOmadaIdiki
	background-color #f3e5c8
	color #67440d

.peAdidosOmadaAtono
	background-color #dadada
	color #484a4c

#peAdapo
#peAdeos
	width $imerominiaWidth

#peExcuse
	width $excuseWidth

#peDeltioIpiresia
#peDeltioDief
	width 545px

#peInfo
	width 551px

.pePliktro
	padding 2px 6px
	background-color beige !important

#peIpalilosZoom
	display none
	position absolute
	top 140px
	left 250px

	width 644px
	overflow-x hidden
	height 220px
	overflow-y scroll
	white-space nowrap

	background-color #ffe19e

	border-style solid
	border-width 1px
	border-color grey
	box-shadow 2px 2px 4px #888888

.ipalilosZoom
	padding 2px
	border-style none none solid none
	border-width 1px
	border-color #a7892d
	cursor pointer
	> div
		display inline-block

.ipalilosZoomZebra0
	background-color #f5d286

.ipalilosZoomZebra1
	background-color #eccf8a

.ipalilosZoomKodikos
	width 4em

.ipalilosZoomOnomateponimo
	width 28em

.ipalilosZoomEpilogi
	background-color teal

#peAlagiOkIndicator
	opacity 0
	position absolute
	bottom 45px
	left 50px
	padding 0px 2px

	font-size 20px
	font-weight bold
	text-shadow 1px 1px 1px #0b0c17
	color yellow
	background-color green

	border-style solid
	border-width 2px
	border-color #e89100
	border-radius 4px
