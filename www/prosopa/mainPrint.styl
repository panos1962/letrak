@page
	size A4 landscape

html
	background-color #ffffff !important

body
	font-size 10pt
	background-color #ffffff !important

// Για τους διαλόγους

body > div
	display none

#ektiposi
	display block
	background-color #ffffff !important

.deltio
	display flex
	justify-content space-between
	align-items center
	padding 10pt 0pt 10pt 0pt

.deltioAristera
	width 33%

.deltioDimos
	display inline-block
	border-style none none solid none
	border-width 1pt
	border-color #000000

.deltioIpiresia
	display inline-block

.deltioKentro
	width 33%
	text-align center

.deltioIdos
	margin-bottom 2pt
	text-decoration underline

.deltioPerigrafi
	display inline-block
	font-weight bold

.deltioDexia
	width 33%
	text-align right

.deltioImerominia
	font-style italic
	font-weight bold

.parousia
	border-style none none none solid
	border-width 1pt
	border-color #000000
	>div
		display inline-block
		padding 0pt 6pt

		white-space nowrap
		overflow hidden
		text-overflow ellipsis

		border-style solid solid none none
		border-width 1pt
		border-color #000000

		&:before
			content '\200B'

.parousiaLast
	border-style solid none none solid

.parousiaOrdinal
	width 20pt
	text-align right

.parousiaIpalilos
	width 40pt
	text-align right

.parousiaOnomateponimo
	width 160pt

.parousiaOrario
	width 56pt

.parousiaMeraora
	width 80pt

.parousiaExcuse
	width 80pt
	text-align center

.parousiaInfo
	width 255pt
	text-align left

.parousiaWrapper
	display inline-block

.ipografes
	border-style solid none none none
	border-width 1pt
	border-color #000000

.ipografi
	display inline-block
	margin-top 10pt
	width 50%
	text-align center

.ipografiKatastasi
	margin-bottom 10pt

.ipografiKirosi
	display inline-block
	font-style italic
	border-style none none solid none
	border-width 1pt
	border-color #000000

.ipografiKirosi:before
	content 'Ελέγχθηκε και κυρώθηκε'

.ipografiAnamoni:before
	content '\2733\0020ΑΝΑΜΕΝΕΤΑΙ ΕΛΕΓΧΟΣ & ΚΥΡΩΣΗ\0020\2733'
	font-weight bold

.ipografiTitlos
	font-style italic

.ipografiOnomateponimo
	font-weight bold
