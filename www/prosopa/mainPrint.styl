@page
	size A4 landscape

html
	background-color #ffffff !important

body
	font-size 10pt
	background-color #ffffff !important

// Για τους διαλόγους

body > div
	display none

#ektiposi
	display block
	background-color #ffffff !important

.deltio
	padding 10pt

.deltioKodikos:before
	content 'Κωδικός'
	font-style italic

.parousia
	border-style none none none solid
	border-width 1pt
	border-color #000000
	>div
		display inline-block
		padding 0pt 6pt

		white-space nowrap
		overflow hidden
		text-overflow ellipsis

		border-style solid solid none none
		border-width 1pt
		border-color #000000

		&:before
			content '\200B'

.parousiaOrdinal
	width 20pt
	text-align right

.parousiaIpalilos
	width 40pt
	text-align right

.parousiaOnomateponimo
	width 160pt

.parousiaOrario
	width 56pt

.parousiaMeraora
	width 80pt

.parousiaExcuse
	width 80pt
	text-align center

.parousiaInfo
	width 250pt
	text-align left
