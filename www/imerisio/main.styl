@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

.pnd-ofelimo
	padding 0px

.filtraTabEnabled
	color red

#filtraForma
	label
		width 6em
	input
		font-size $fontSizeInput
	> .letrak-formaPanel
		> input
			font-family $fontSteno
			font-size $fontSizeNormal

.filtraInput
	width 8em

.imerisio
	padding 2px
	white-space nowrap
	color #333333
	border-style solid
	border-color transparent transparent grey transparent
	border-width 2px
	vendor('user-select', none)
	cursor pointer
	> div
		display inline-block
		padding 0px 4px

.imerisioCandi
	color #000000
	text-shadow 0.5px 0px 0px #000000
	background-color #ffc49a

.imerisioKodikos
	width 5em
	text-align right
	font-weight bold

.imerisioImerominia
	width 5em

.imerisioIpiresia
	width 4.5em
	font-family $fontSteno

.imerisioTipos
	width 5.5em
	font-family $fontSteno

.imerisioPerigrafi
	width 30em
	font-family $fontSteno

.imerisioClosed
	width 5em

.candiTab
	display none !important

.candiTabVisible
	display inline-block !important
