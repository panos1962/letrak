@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

#ektiposi
	display none

.pnd-ofelimo
	padding 0px
	overflow-x hidden

/******************************************************************************/

#deltioArea
	margin-top 2px
	padding 2px 4px
	text-align center
	background-color #d1dbb7
	border-style none none double none
	border-width 3px
	> div
		display inline-block

#deltioImerominia
	&:before
		content 'Ημερομηνία:'
		padding-right 2px
		font-weight normal
	&:after
		content ','
		font-weight normal
	font-weight bold

#deltioKodikos
	font-weight bold
	> div
		display inline-block

#deltioProselefsi
	&:before
		content 'Προσέλευση:'
		padding-left 2px
		padding-right 2px
		font-weight normal
	&:after
		content ','
		font-weight normal

#deltioApoxorisi
	&:before
		content 'Αποχώρηση:'
		padding-left 2px
		padding-right 2px
		font-weight normal
	&:after
		content ','
		font-weight normal

#deltioIpiresia
	&:before
		content 'Υπηρεσία:'
		padding-left 2px
		padding-right 2px
		font-weight normal
	font-weight bold

.deltio
	margin 2px
	background-color #c4cb9c
	border-radius 4px
	> div
		display inline-block
		padding 2px

/******************************************************************************/

.ipalilos
	display block
	padding 2px 4px
	background-color #f5f0da
	border-style none none dotted none
	border-width 1px
	cursor crosshair

.ipalilos0
	background-color #f5f0da

.ipalilos1
	background-color #ebe4c2

.ipalilosDone
	background-color #cdcdcc

/******************************************************************************/

$ipalilosDataWidth = 20em

.ipalilosData
	display inline-block
	vertical-align top
	padding 4px
	width $ipalilosDataWidth
	min-width $ipalilosDataWidth
	max-width $ipalilosDataWidth
	min-height 100%
	overflow-x hidden

.ipalilosKodikos
	display inline-block
	font-weight bold
	&:before
		content '['
		padding-right 2px
		font-weight normal
		opacity 0.6
	&:after
		content ']'
		margin-right 2px
		padding-left 2px
		font-weight normal
		opacity 0.6

.ipalilosOnoma
	display inline-block

/******************************************************************************/

.apousiaData
	display inline-block
	vertical-align top;
	border-width 1px
	border-style none none none dotted

.apousia
	display block
	padding 4px
	font-weight bold
	> div
		display inline-block

.apousiaProselefsi
	&:before
		content 'Προσέλευση:'
		display inline-block
		margin-right 4px
		min-width 6em
		text-align right
		color: #283c8a
		font-style italic
		font-weight normal

.apousiaApoxorisi
	&:before
		content 'Αποχώρηση:'
		display inline-block
		margin-right 4px
		min-width 6em
		text-align right
		color: #283c8a
		font-style italic
		font-weight normal

.adidos
	padding 2px 4px
	background-color midnightblue
	color yellow
	border-radius 4px

.diastima
	margin-left 10px

.sxolio
	margin-left 10px
	font-weight normal
	font-style italic

.sxolioMono
	font-style italic

/******************************************************************************/

#apantesParontes
	margin 20px 0 0 2px
	padding 4px
	width 30em
	font-size 120%
	font-style italic
	cursor pointer

.error
	display inline-block
	margin 2px 2px 2px 4px
	padding 2px 4px
	background-color #a70000
	color yellow
	border-radius 4px
