@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

#ektiposi
	display none

.pnd-ofelimo
	padding 0px
	overflow-x hidden

/******************************************************************************/

#deltioArea
	text-align center
	background-color #d1dbb7
	border-style none none double none
	border-width 3px

#deltio
	display block
	margin 4px 0
	font-weight bold
	> div
		display inline-block
		border-radius 2px

#deltioImerominia
	margin-right 10px
	&:before
		content 'Ημερομηνία:'
		padding-right 2px
		font-weight normal
		font-style italic

#deltioProselefsi
	margin 0 4px
	padding 0 2px
	&:before
		content 'Προσέλευση:'
		padding-left 2px
		padding-right 2px
		font-weight normal
		font-style italic

#deltioApoxorisi
	margin 0 4px
	padding 0 2px
	&:before
		content 'Αποχώρηση:'
		padding-left 2px
		padding-right 2px
		font-weight normal
		font-style italic

.deltioKatastasiEKREMES
	background-color $deltioKatastasiColorEKREMES

.deltioKatastasiANIPOGRAFO
	background-color $deltioKatastasiColorANIPOGRAFO

.deltioKatastasiKIROMENO
	color gold
	background-color $deltioKatastasiColorKIROMENO

.deltioKatastasiEPIKIROMENO
	color #ffe86f
	background-color $deltioKatastasiColorEPIKIROMENO

.epikirosiPliktro
	color #ffe86f
	background-color $deltioKatastasiColorEPIKIROMENO
	&:hover
		color midnightblue

/******************************************************************************/

#ipiresia
	display block
	padding 2px 0

#ipiresiaKodikos
	display inline-block
	font-weight bold
	&:before
		content '['
		padding-right 2px
		font-weight normal
		opacity 0.6
	&:after
		content ']'
		padding-left 2px
		font-weight normal
		opacity 0.6

#ipiresiaPerigrafi
	display inline-block
	padding-left 10px
	font-weight bold

#ipiresiaDie
	display block
	margin 4px 0

#ipiresiaTmi
	display block
	margin 4px 0

/******************************************************************************/

.ipalilos
	display block
	padding 2px 4px
	background-color #f5f0da
	border-style none none dotted none
	border-width 1px
	cursor crosshair

.ipalilos0
	background-color #f5f0da

.ipalilos1
	background-color #ebe4c2

.ipalilosDone
	background-color #cdcdcc

/******************************************************************************/

$ipalilosDataWidth = 20em

.ipalilosData
	display inline-block
	vertical-align top
	padding 4px
	white-space nowrap
	width $ipalilosDataWidth
	min-width $ipalilosDataWidth
	max-width $ipalilosDataWidth
	min-height 100%
	overflow-x hidden

.ipalilosKodikosKelifos
	display inline-block
	width 4em
	text-align right

.ipalilosKodikos
	display inline-block
	font-weight bold
	&:before
		content '['
		padding-right 2px
		font-weight normal
		opacity 0.6
	&:after
		content ']'
		margin-right 2px
		padding-left 2px
		font-weight normal
		opacity 0.6

.ipalilosOnoma
	display inline-block
	margin-left 4px

/******************************************************************************/

.apousiaData
	display inline-block
	vertical-align top;
	border-width 1px
	border-style none none none dotted

.apousia
	display block
	padding 4px
	font-weight bold
	> div
		display inline-block

.apousiaProselefsi
	&:before
		content 'Προσέλευση:'
		display inline-block
		margin-right 4px
		min-width 6em
		text-align right
		color: #283c8a
		font-style italic
		font-weight normal

.apousiaApoxorisi
	&:before
		content 'Αποχώρηση:'
		display inline-block
		margin-right 4px
		min-width 6em
		text-align right
		color: #283c8a
		font-style italic
		font-weight normal

.adidos
	padding 2px 4px
	background-color midnightblue
	color yellow
	border-radius 4px

.diastima
	margin-left 10px

.sxolio
	margin-left 10px
	font-weight normal
	font-style italic

.sxolioMono
	font-style italic

/******************************************************************************/

#apantesParontes
	margin 20px 0 0 2px
	padding 4px
	text-align center
	font-size 200%

#apantesParontesKlik
	margin 20px 0 0 2px
	padding 4px
	width 30em
	font-style italic

.error
	display inline-block
	margin 2px 2px 2px 4px
	padding 2px 4px
	background-color #a70000
	color yellow
	border-radius 4px
