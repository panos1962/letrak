@import '../mnt/pandora/lib/common.styl'
@import '../lib/common.styl'

deltioXroma = #61b5a1

#ektiposi
	display none

.pnd-ofelimo
	padding 0px
	overflow-x hidden

/******************************************************************************/

.deltio
	display inline-block
	margin 2px
	background-color deltioXroma
	border-radius 4px
	> div
		display inline-block
		padding 2px

.deltioKodikos
	&:before
		content '['
		padding-right 2px
	&:after
		content ']'
		padding-left 2px

.deltioImera
	font-weight bold
	&:after
		content ','
		font-weight normal

.deltioVs
	display inline-block
	margin 2px
	width 21px
	height 21px
	text-align center
	background-color deltioXroma
	border-radius 12px

/******************************************************************************/

.ipalilos
	margin 4px
	background-color #d5c494
	border-radius 4px
	> div
		display inline-block
		padding 2px

.ipalilosKodikos
	&:before
		content '['
		padding-right 2px
	&:after
		content ']'
		padding-left 2px

/******************************************************************************/
